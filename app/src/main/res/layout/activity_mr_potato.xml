<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mr_potato"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mathsistor.m.mrpotato.MrPotatoActivity">

    <TextView
        android:id="@+id/mr_potato_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:textStyle="bold"
        android:text="Mr. Potato Head" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/body"
            android:src="@drawable/body"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/hat"
            android:visibility="invisible"
            android:src="@drawable/hat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/eyebrows"
            android:visibility="invisible"
            android:src="@drawable/eyebrows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/eyes"
            android:visibility="invisible"
            android:src="@drawable/eyes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/ears"
            android:visibility="invisible"
            android:src="@drawable/ears"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/glasses"
            android:visibility="invisible"
            android:src="@drawable/glasses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/nose"
            android:visibility="invisible"
            android:src="@drawable/nose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/mouth"
            android:visibility="invisible"
            android:src="@drawable/mouth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/arms"
            android:visibility="invisible"
            android:src="@drawable/arms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/shoes"
            android:visibility="invisible"
            android:src="@drawable/shoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/mustache"
            android:visibility="invisible"
            android:src="@drawable/mustache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/mr_potato_parts"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:text="Hat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <CheckBox
                android:text="Eyebrows"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <CheckBox
                android:text="Nose"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <CheckBox
                android:text="Mustache"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <CheckBox
                android:text="Arms"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:text="Eyes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <CheckBox
                android:text="Glasses"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <CheckBox
                android:text="Mouth"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <CheckBox
                android:text="Ears"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <CheckBox
                android:text="Shoes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
